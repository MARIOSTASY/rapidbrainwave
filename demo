        <!-- Ενότητα Παιχνιδιού 2D -->
        <section id="game">
            <h2>2D Adventure Game</h2>
            <canvas id="gameCanvas" width="800" height="600"></canvas>
            <script>
                const canvas = document.getElementById('gameCanvas');
                const ctx = canvas.getContext('2d');
                let player = { x: 50, y: 500, width: 50, height: 50, color: 'blue', speed: 5 };
                let obstacles = [
                    { x: 200, y: 450, width: 50, height: 50 },
                    { x: 400, y: 400, width: 50, height: 50 },
                    { x: 600, y: 350, width: 50, height: 50 }
                ];
                let level = 1;
                let gameOver = false;
                let win = false;

                function drawPlayer() {
                    ctx.fillStyle = player.color;
                    ctx.fillRect(player.x, player.y, player.width, player.height);
                }

                function drawObstacles() {
                    ctx.fillStyle = 'red';
                    obstacles.forEach(obstacle => {
                        ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
                    });
                }

                function clearCanvas() {
                    ctx.clearRect(0, 0, canvas.width, canvas.height);
                }

                function checkCollision() {
                    for (let obstacle of obstacles) {
                        if (player.x < obstacle.x + obstacle.width &&
                            player.x + player.width > obstacle.x &&
                            player.y < obstacle.y + obstacle.height &&
                            player.y + player.height > obstacle.y) {
                            gameOver = true;
                        }
                    }
                    if (player.x > canvas.width - player.width) {
                        if (level >= 100) {
                            win = true;
                        } else {
                            level++;
                            player.x = 50;
                            player.y = 500;
                            obstacles.push({
                                x: Math.random() * (canvas.width - 100) + 100,
                                y: Math.random() * (canvas.height - 200) + 100,
                                width: 50,
                                height: 50
                            });
                        }
                    }
                }

                function gameLoop() {
                    if (!gameOver && !win) {
                        clearCanvas();
                        drawPlayer();
                        drawObstacles();
                        checkCollision();
                        requestAnimationFrame(gameLoop);
                    } else {
                        ctx.clearRect(0, 0, canvas.width, canvas.height);
                        ctx.font = '40px Arial';
                        ctx.fillText(win ? 'You Win! Congratulations!' : 'Game Over! Try Again.', 150, 300);
                    }
                }

                document.addEventListener('keydown', event => {
                    switch (event.key) {
                        case 'ArrowRight': if (player.x + player.width < canvas.width) player.x += player.speed; break;
                        case 'ArrowLeft': if (player.x > 0) player.x -= player.speed; break;
                        case 'ArrowUp': if (player.y > 0) player.y -= player.speed; break;
                        case 'ArrowDown': if (player.y + player.height < canvas.height) player.y += player.speed; break;
                    }
                });

                gameLoop();
            </script>
        </section>
    </main>

